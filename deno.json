{
  "workspace": [
    "./apps/web",
    "./packages/ui",
    "./packages/utils",
    "./packages/tokens"
  ],
  "tasks": {
    "autofix": "deno fmt && deno lint",
    "test": "deno test",
    "precommit": "deno task autofix && deno task test",
    "dev": "cd apps/web && deno task dev",
    "build": "cd apps/web && deno task build",
    "start": "cd apps/web && deno task start",
    "update": "deno run -A -r jsr:@fresh/update .",
    "source-guard": "deno fmt --check . && deno lint . && deno check",
    "runtime-guard": "deno test && cd apps/web && deno task build"
  },
  "fmt": {
    "semiColons": false,
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "trailingCommas": "always"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "@std/uuid": "jsr:@std/uuid@^1.1.0",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  }
}
